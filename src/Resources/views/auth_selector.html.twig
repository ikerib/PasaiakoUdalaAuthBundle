{% extends 'base.html.twig' %}

{% block title %}Aukeratu Autentikazio Sistema{% endblock %}

{% block body %}
<style>
    body {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
        margin: 0;
        padding: 20px;
    }

    .auth-selector-container {
        max-width: 600px;
        width: 100%;
    }

    .auth-card {
        background: white;
        border-radius: 20px;
        box-shadow: 0 20px 60px rgba(0,0,0,0.3);
        padding: 40px;
        text-align: center;
    }

    .auth-logo {
        width: 80px;
        height: 80px;
        margin: 0 auto 20px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 40px;
    }

    h1 {
        color: #2d3748;
        font-size: 28px;
        font-weight: 700;
        margin: 0 0 10px 0;
    }

    .subtitle {
        color: #718096;
        font-size: 16px;
        margin: 0 0 40px 0;
    }

    .auth-methods {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
        margin-bottom: 30px;
    }

    .auth-method-btn {
        background: white;
        border: 2px solid #e2e8f0;
        border-radius: 15px;
        padding: 30px 20px;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        color: #2d3748;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 15px;
    }

    .auth-method-btn:hover {
        border-color: #667eea;
        background: #f7fafc;
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(102, 126, 234, 0.2);
    }

    .auth-method-icon {
        font-size: 50px;
        width: 80px;
        height: 80px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 15px;
        color: white;
    }

    .auth-method-title {
        font-size: 18px;
        font-weight: 600;
        color: #2d3748;
    }

    .auth-method-desc {
        font-size: 14px;
        color: #718096;
        line-height: 1.5;
    }

    .info-box {
        background: #edf2f7;
        border-radius: 10px;
        padding: 15px;
        margin-top: 20px;
    }

    .info-box p {
        margin: 0;
        color: #4a5568;
        font-size: 14px;
        line-height: 1.6;
    }

    @media (max-width: 600px) {
        .auth-methods {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="auth-selector-container">
    <div class="auth-card">
        <div class="auth-logo">üîê</div>
        <h1>Kaixo!</h1>
        <p class="subtitle">Aukeratu zure autentikazio sistema</p>

        <div class="auth-methods">
            <!-- LDAP Login -->
            <a href="{{ path('app_login_ldap') }}" class="auth-method-btn">
                <div class="auth-method-icon">
                    üë§
                </div>
                <div class="auth-method-title">LDAP</div>
                <div class="auth-method-desc">
                    Erabiltzaile eta pasahitza
                </div>
            </a>

            <!-- Certificate Login -->
            <a href="{{ path('oauth_connect') }}" class="auth-method-btn">
                <div class="auth-method-icon">
                    üìú
                </div>
                <div class="auth-method-title">Ziurtagiria</div>
                <div class="auth-method-desc">
                    Izenpe ziurtagiriarekin
                </div>
            </a>
        </div>

        <div class="info-box">
            <p>
                <strong>üí° Informazioa:</strong><br>
                LDAP bidez: erabiltzaile eta pasahitza erabiltzen ditu.<br>
                Ziurtagiriaz: Izenpe ziurtagiri digitala behar duzu.
            </p>
        </div>
    </div>
</div>
{% endblock %}
